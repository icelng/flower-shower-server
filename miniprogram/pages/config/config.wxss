/* pages/config/config.wxss */
page {
  height: 100%;
}

.head {
  -webkit-mask-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.loader {
  border: 5rpx solid #f3f3f3; /* Light grey */
  border-top: 5rpx solid #3498db; /* Blue */
  border-radius: 80%;
  width: 40rpx;
  height: 40rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}