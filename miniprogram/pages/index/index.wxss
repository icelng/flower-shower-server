/**index.wxss**/

page {
  height: 100%;
  background: linear-gradient(to top, #fdfdfd, #f9f9f9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}

.device-item {
  margin-bottom:24rpx;
  width: 96%;
  border-radius: 18rpx;
  box-shadow: 1px 1px 1px #d2d5d6ee;
  background: linear-gradient(to right, #ebebeb, #ffffff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
 }

 .scan-device-item {
  margin-bottom:24rpx;
  width: 96%;
  border-radius: 18rpx;
  box-shadow: 1px 1px 1px #cdcfcf;
  background: linear-gradient(to right, #ebebeb, #ffffff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
 }

 .loader {
  border: 5rpx solid #f3f3f3; /* Light grey */
  border-top: 5rpx solid #3498db; /* Blue */
  border-radius: 80%;
  width: 40rpx;
  height: 40rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}